{
    "manifest_version": 2,
    "name": "Chick",
    "version": "0.0.1",
    "permissions": [
        "webRequest",
        "storage",
        "unlimitedStorage",
        "bookmarks",
        "history",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": ["clojure/compiled/main.js", "dist/background.js"],
        "persistent": true
    },
    "icons": {
        "14": "img/icon_14.png",
        "16": "img/icon_16.png",
        "24": "img/icon_24.png",
        "32": "img/icon_32.png",
        "48": "img/icon_48.png",
        "64": "img/icon_64.png",
        "128": "img/icon_128.png",
        "256": "img/icon_256.png",
        "512": "img/icon_512.png",
        "1024": "img/icon_1024.png"
    },
    "web_accessible_resources": [
        "img/*"
    ],
    "browser_action": {
        "default_title": "Chick",
        "default_popup": "popup/index.html"
    },
    "content_scripts": [{
        "matches": ["https://www.google.com/*",
            "https://www.google.co.jp/*",
            "https://www.bing.com/*",
            "https://duckduckgo.com/*",
            "https://search.yahoo.co.jp/*"
        ],
        "js": ["dist/content.js"]
    }],
    "options_page": "option/index.html"
}